<p id="notice"><%= notice %></p>


<h1>共有カレンダー</h1>

<table>
  <thead>
    <tr>
      <th>予定</th>
      <th>時間</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.start_time.strftime("%Y-%m-%d %H:%M") %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event.id), metthod: :get  %></td>
        <td><%= link_to 'Destroy', event_path(event.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'イベントを作成', new_event_path, method: :get%>

<%= month_calendar events: @events do |date, event| %>
  <%= date.day %>

  <% event.each do |event| %>
    <div>
      <%= link_to event.title, event %>
    </div>
  <% end %>
<% end %>