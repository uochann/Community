<p id="notice"><%= notice %></p>
<div id="calendar"></div>

<h1>イベント</h1>

<table>
  <thead>
    <tr>
      <th>題名</th>
      <th>説明</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.description %></td>
        <td><%= link_to '詳細', event %></td>
        <td><%= link_to '編集', edit_event_path(event) %></td>
        <td><%= link_to '削除', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<br>

